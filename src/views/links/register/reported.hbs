        <p>Sexo</p>
        <select name="sex">
          <option value="Male">Macho</option>
          <option value="Female">Hembra</option>
          <option value="undefined">Nose</option>
        </select>
      </div>
      <div class="item">
        <p>Cuando se encontr칩</p>
        <input type="date" name="date" required />
        <i class=""></i>
      </div>
      <div class="item">
        <p>Color</p>
        <input type="text" name="color" placeholder="Color" required />
      </div>
      <div class="item">
        <p>Direccion</p>
        <input
          type="text"
          name="direction"
          placeholder="Ingresa direccion"
          required
        />
      </div>
      <div class="description">
        <p>Observaciones</p>
        <div class="observation">
          <textarea required name="observation"></textarea>

        </div>
      </div>
      <div class="btn">
        <button type="submit">Registrar</button>
