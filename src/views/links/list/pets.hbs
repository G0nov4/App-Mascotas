<style>
    body {
        background-color: #f3f0c7;
    }

    .container {
        margin: 0 auto;
        font-family:
            var(--font-poppins), sans-serif;
    }

    .container .title {
        display: ;
        margin-top:
            20px;
        margin-left: 15px;
        font-family: "baloo-thambi", sans-serif;
        color:
            #108896;
        font-weight: 100px;
        font-size: 30px;
    }

    .list_report {
        display:
            initials;
        flex-direction: row;
        flex-wrap: wrap;
      
        align-items: center;
    }
    .list_report h3{
        color: #108896;
        margin: 20px 0px 20px 40px;

    }
    .list_report hr{
        width: 90%;
        margin-left: 20px;
        line-height: 3px;
    }

    .lista {
        width: 90%;
        margin: 0 auto;
        display: flex;
        flex-direction: row;
        flex-wrap:
            wrap;

        align-items: center;
        padding: 10px;
    }

    .lista .card {
        position: relative;
        width: 220px;
        margin: 20px;
        display: flex;
        flex-direction: column;
        background-color: rgb(255, 255, 255);
        border-radius: 0 0px 10px 10px;
        box-shadow: 2px 0px 20px #0000004a;
        overflow: hidden;
        border-radius: 10px;
    }

    .card .specie {
        position:
            absolute;
        margin: 0;
        top: 0;
        left: 0;
        color: rgba(255, 255, 255, 1);
        text-transform: uppercase;
        font-weight: bold;
        font-size: 1rem;
        padding:
            20px;
    }

    .card .card-img {
        width: 100%;
        height: 200px;
        overflow: hidden;
    }

    .card .card-img img {
        height: 200px;
        width: 100%;
        object-fit: cover;
    }

    .card .date {
        font-size: 13px;
        margin: 10px 0 10px 0;
        padding: 0px 30px;
        color: #A5A5A5;
        font-weight:
            bold;
    }

    .card .card-title {
        margin: 0 0 0 30px;
        color: black;
    }

    .card .description {
        font-size: 14px;
        margin: 5px 5px 5px 30px;
        color: black;
    }

    .card .card-button button {
        width: 100%;
        padding: 12px;
        border-radius: 5px;
        border: none;
        background-color: var(--success);
        font-weight: bold;
        color: white;
        font-size:
            1.1em;
        text-transform: uppercase;
        margin-top: 10px;
    }

      #topBtn{
  position: fixed;
  bottom: 40px;
  right: 40px;
  font-size: 22px;
  width: 55px;
  height: 55px;
  background: #EF5030;
  color: white;
  border: none;
  cursor: pointer;
  display: none;
  border-radius: 30px;
}

    @media (max-width:430px) {

        .container>h1 {
            margin: 0;
            padding: 10px;
            text-align: center;
            font-size: 1.5rem;
        }
        .container .title{
            margin: 0;
        }
         #topBtn{
        font-size: 22px;
        width: 40px;
        height: 40px;
        
        }
    }
</style>
<div class="container">
    <h1 class="title">Todas las mascotas</h1>
    <div class="list_report">
        <h3>Mascotas Perdidas</h3>
        <hr>
        <div class="lista">
            {{#each lost}}

            <div class="card">
                <p class="specie">{{specie}}</p>
                <div class="card-img">
                    <img src="{{url}}" alt="" />
                </div>
                <p class="date">{{datepet}}</p>
                <h3 class="card-title">
                    {{name}}
                </h3>
                <p class="description"><strong>Estado: </strong>{{status}}</p>
                <p class="description"><strong>Color: </strong> {{color}}</p>
                <p class="description"><strong>Identificador: </strong>{{idpet}}</p>

                <div class="card-button">
                    <button onclick="window.location.href='/list/{{idpet}}'">
                        Marcar como encontrado</button>
                </div>
            </div>

            {{/each}}
        </div>
        <h3>Mascotas reportadas</h3>
        <hr>
        <div class="lista">
            {{#each report}}

            <div class="card">
                <p class="specie">{{specie}}</p>
                <div class="card-img">
                    <img src="{{url}}" alt="" />
                </div>
                <p class="date">{{datepet}}</p>
                <h3 class="card-title">
                    {{name}}
                </h3>
                <p class="description">{{observation}}</p>

                <div class="card-button">
                    <button onclick="window.location.href='/list/{{idpet}}'">
                        Marcar como encontrado</button>
                </div>
            </div>

            {{/each}}
        </div>


    </div>

</div>

<button id="topBtn"><i class="fas fa-arrow-up"></i></button>


<script>$(document).ready(function(){

  $(window).scroll(function(){
    if($(this).scrollTop() > 40){
      $('#topBtn').fadeIn();
    } else{
      $('#topBtn').fadeOut();
    }
  });

  $("#topBtn").click(function(){
    $('html ,body').animate({scrollTop : 0},800);
  });
});
</script>