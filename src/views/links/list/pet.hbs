<style>
    .swiper-container {
        width: 100%;
        height: 100%;
    }

    .swiper-slide {
        width: 100%;
        height: 80vh;

        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
    }

    .swiper-slide img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .swiper-slide {
        width: 80%;
    }

    .swiper-slide:nth-child(2n) {
        width: 60%;
    }

    .swiper-slide:nth-child(3n) {
        width: 40%;
    }

    .pet {
        margin: 0 auto;
        width: 100%;
        display: flex;
        flex-direction: column;
        background-color: #fcfbda ;
        font-family: var(--font-poppins);
    }

    .pet .name_pet {
        width: 100%;
        text-align: center;
        padding: 30px;
        margin-top: 20px;
    }

    .pet .name_pet h1 {
        font-size: 3.45em;
        color: var(--cl-secondary);
        text-transform: uppercase;
        font-weight: bold;
        font-family: "baloo-thambi", sans-serif;
    }

    .description {
        width: 100%;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
    }

    .description .text {
        width: 50%;
    }

    .description .text p {
        color: var(--cl-secondary);
        font-size: 1.3rem;
        margin: 5px;
    }

    .description .text p strong {

        font-size: 1.5rem;

    }

    .description .map {
        width: 40%;
    }

    .description .map .map-title {
        width: 100%;
        text-align: center;
        color: var(--cl-secondary);
        font-size: 1.2rem;
    }

    .description .map .map-image {
        width: 100%;
        height: 220px;
        background-color: skyblue;
        box-shadow: 3px 0px 30px #bdb9b9;
    }

    .description .map .map-direction {
        width: 100%;
    }

    .description .map .map-direction p {
        margin: 10px;
        color: var(--cl-secondary);
        text-align: center;
    }

    .contact {
        width: 100%;
        display: flex;
        flex-direction: column;
        margin-bottom: 30px;
    }

    .contact .title {
        width: 100%;
        text-align: center;
        color: var(--cl-secondary);
        margin: 30px 0px;
        font-family: "baloo-thambi", sans-serif;
        font-weight: lighter;
    }

    .contact .cards {
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
    }

    .contact .cards .card {
        padding: 20px;
        width: 30%;
        display: flex;
        flex-direction: column;
        border-radius: 30px;
    }

    .contact .cards .card .icon{
        width: 100%;
        height: 40px;
        text-align: center;
    }

    .contact .cards .card .title{
        margin: 10px 0;
        font-weight: bold;
        text-transform: uppercase;
    }

    .contact .cards .card .content{
        text-align: center;
    }

    .contact .cards .green {
        background-color: #cbf09e;
        box-shadow: 3px 0px 30px #bdb9b9;
    }

    .contact .cards .yellow {
        background-color: #a7e7f5;
        box-shadow: 3px 0px 30px #bdb9b9;
    }






