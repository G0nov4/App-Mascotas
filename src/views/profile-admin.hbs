<style>
    .center{
        margin: 0 auto;
        width: 90%;
        font-family: var(--font-poppins);
    }
    .tabla{
        width: 100%;
         height: 66vh;
        overflow-y: scroll;
        overflow-y: auto;
        background-color: #ffefd2;
    }
    table {
     
    width:100%;
   
    font:normal 13px Arial;
    text-align:center;
    border-collapse:collapse;
    font-family: var(--font-poppins);
}
    table thead tr{
        border-radius: 10px;
        text-align: center; 
        background-color: var(--nav_color);
    }
    table thead tr th,
    table tbody tr td{
       font-family: var(--font-poppins);
        padding: 10px 0px;
    }
    .id{
        width: 5%;
    }
    .type span{
        color: rgb(255, 255, 255);
        background-color: rgb(1, 89, 130);
        padding: 2px 10px;
        border-radius: 9px;
        box-shadow: 2px 2px 5px rgb(114, 114, 114);
    }
    .button{
        width: 7%;
    }
    .button .delete{
        border: none;
        background-color: rgb(255, 80, 49);
        border-radius: 4px;
        padding: 8px 8px;
        color: white;
        font-weight: bold;
        border: 2px solid rgba(0, 0, 0, 0.323);
        box-shadow: 2px 2px 3px rgba(237, 237, 237, 0.323);
    }

</style>
<div class="center">
    <div class="title">
        <h1>
            ADMINISTRADOR
        </h1>
    </div>
</div>
<div class="center">
    <h2 class="title">Usuarios</h2>
    <div class="tabla">
        <table>
             <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Date created</th>
                <th>Tipo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            
                {{#each users}}
                <tr></tr>
                <td class="id">{{iduser}}</td>
                <td class="name">{{name}}</td>
                <td class="lastname">{{lastname}}</td>
                <td class="email">{{email}}</td>
                <td class="date">{{date_created}}</td>
                <td class="type"><span>{{type}}</span></td>
                <td class="button"><button class="delete" onclick="window.location.href='/delete/{{iduser}}'">D</button></td>
                   </tr>
            
                {{/each}}
         
        </tbody>
        </table>
            </div>
</div>