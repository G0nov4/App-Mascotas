<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,400;0,600;1,300&display=swap%27');
    @import url(http://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700);
    @import url('http://fonts.cdnfonts.com/css/baloo-thambi');



    .container{
        margin: 0 auto;
        width: 100%;
        background: #E1EFD0;
        height: 100%;
    }
    .container .title_user{
       
        color: #108896;
        text-align: center;
        font-family: "Roboto", "sans-serif";
        font-size: 35px;
        font-weight: lighter;
    }
    .container .title_user span{
        color: tomato;
        font-family: "baloo-thambi", "sans-serif";
        font-weight: bold;
    }
    .nav_options{
        width: 100%;
        display: flex;
        flex-direction: row;
        /*justify-content: space-evenly;*/
        padding: 10px;
        margin-bottom: 30px;

    }
    .nav_options a{
        background: #EF5030;
        color: white;
        padding: 15px;
        border-radius: 30px;
        text-decoration: none;
        box-shadow: -10px 0px 0 0px #ffcc29;
        margin: 30px 0px 0px 300px;
    }
    .nav_options a:hover{
        background-color: #81b214;
        box-shadow: 0 0 0 0;
    }
     .nav_options a:active{
        background-color: #81b214;
    }
    .separator{
        color: #363636;
        text-transform: uppercase;
        font-family: "Roboto", "sans-serif";
        font-weight: lighter;
        font-size: 40px;
        margin: 0 0px 0px 490px;
    }
    hr{
        margin-top: 30px;
        margin-bottom: 30px;
        color: #61b15a;
       
        width: 100%;
    }
    .list_elements{
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-around;
        align-items: center;
        padding: 20px 0;
        background-color: #E1EFD0;

    }
    .list_elements .card{
        
        width: 250px;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        border-radius: 5px;
        background: rgb(255, 248, 241);
        margin: 10px;
    }
    .list_elements .card .status{
        width: 100%;
        background-color: tomato;
        padding: 3px;
    }
    .list_elements .card .status h3{
        color: white;
        text-transform: uppercase;
        text-align: center;
    }
    
    .list_elements .card .image img{
   
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .list_elements .card .description{
       padding: 10px;
        
    }
    .list_elements .card .description p{
        margin: 0;
        padding-left: 10px;
        color: rgba(20, 20, 20, 0.5);
    }
    .list_elements .card .description h2{
        padding-left: 10px;
        color: teal;
    }
    .list_elements .card .description h3{
        margin: 0;
        padding-left: 10px;
        color: salmon;

    }

    .list_elements .card .options_card{
        
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: center;
        text-transform: uppercase;
        font-weight: bold;
    }
 .list_elements .card .options_card .option:nth-child(1){
        width: 50%;
 }
.list_elements .card .options_card .option:nth-child(1) button{
    padding: 5px;
    border: none;
    width: 100%;
    height: 100%;
    background-color: orangered;
    color: white;
    font-weight: bold;
    text-transform: uppercase;
}
   .list_elements .card .options_card .option:nth-child(2){
        width: 50%;
 }
    .list_elements .card .options_card .option:nth-child(2) button{
        appearance: inherit;
        width: 100%;
        height: 100%;
        border: none;
        background-color: green;
        color: white;
        text-align: center;
        font-weight: bold;
text-transform: uppercase;
        
    }
    @media (max-width: 1024px){
        .title_user h1{
            
            font-size: 4rem;
        }
        hr{
            margin: 10px 0;
        }
    
        .nav_options{
            display: flex;
            flex-direction: row;
            justify-content: space-around;
            align-items: center;
            margin: 0;
            padding: 32px;

        }
        .nav_options a{
            margin: 0;
            padding: 15px 30px;
        }
        .separator{
            margin: 0 0 0 20px;
        }
    }
    @media (max-width: 435px){
         .nav_options{
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            align-items: center;
            margin: 0;
            padding: 10px;

        }
        
        .title_user h1{
            
            font-size:2rem;
        }
        hr{
            margin: 10px 0;
        }
         .nav_options a{
             text-align: center;
             width: 90%;
            margin: 10px 0;
            padding: 10px 20px;
        }
        .separator{
            font-size: 1.5rem;
        }
    }
    
</style>
<div class="container">
    <div class="title_user">
        <h1>Bienvenido <span>{{user.name}}</span></h1>
    </div>
    <div class="nav_options">
        <a href="/profile/reported">Reportar una Mascota</a>
        <a href="/profile/lost">Registrar Mascota Perdida</a>
    </div>
    <h2 class="separator">Lista de Animales</h2>
    <hr>
    <div class="list_elements">
     {{#each pets}}
        <div class="card">
            <div class="status">
                <h3>{{status}}</h3>
            </div>
            <div class="image">
                <img src="{{url}}" alt="img">
            </div>
            <div class="description">
                <p>{{specie}}</p>
                <h2>{{name}}</h2>
                <h3>{{sex}}</h3>
            </div>
            <div class="options_card">
                <div class="option">
                    <button onclick="window.location.href='/profile/delete/{{idpet}}'">Delete</button>
                </div>
                <div class="option">
                    <button onclick="window.location.href='/profile/edit/{{idpet}}'">Edit</button>
                </div>
            </div>
        </div>
        
        {{/each}}
    </div>
</div>

