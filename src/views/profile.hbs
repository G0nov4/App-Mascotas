<style>
    .container{
        margin: 0 auto;
        width: 90%;
    }
    .container .title_user{
        color: white;
        text-align: center;
    }
    .container .title_user span{
        color: tomato;
    }
    .nav_options{
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        padding: 10px;
        margin-bottom: 20px;
    }
    .nav_options a{
        background: tomato;
        color: white;
        padding: 10px;
        border-radius: 5px;
        text-decoration: none;
    }
    .nav_options a:hover{
        background: rgb(255, 80, 49);
    }
    .separator{
        color: white;
        text-transform: uppercase;
    }
    hr{
        margin: 10px;
        color: rgba(255, 255, 255, 0.1);
        margin: 0 0;
        width: 90%;
    }
    .list_elements{
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-around;
        align-items: center;
        padding: 20px 0;

    }
    .list_elements .card{
        
        width: 250px;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        border-radius: 5px;
        background: rgb(255, 248, 241);
        margin: 10px;
    }
    .list_elements .card .status{
        width: 100%;
        background-color: tomato;
        padding: 3px;
    }
    .list_elements .card .status h3{
        color: white;
        text-transform: uppercase;
        text-align: center;
    }
    
    .list_elements .card .image img{
   
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .list_elements .card .description{
       padding: 10px;
        
    }
    .list_elements .card .description p{
        margin: 0;
        padding-left: 10px;
        color: rgba(20, 20, 20, 0.5);
    }
    .list_elements .card .description h2{
        padding-left: 10px;
        color: teal;
    }
    .list_elements .card .description h3{
        margin: 0;
        padding-left: 10px;
        color: salmon;

    }

    .list_elements .card .options_card{
        
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: center;
        text-transform: uppercase;
        font-weight: bold;
    }
 .list_elements .card .options_card .option:nth-child(1){
        width: 50%;
 }
.list_elements .card .options_card .option:nth-child(1) button{
    padding: 5px;
    border: none;
    width: 100%;
    height: 100%;
    background-color: orangered;
    color: white;
    font-weight: bold;
    text-transform: uppercase;
}
   .list_elements .card .options_card .option:nth-child(2){
        width: 50%;
 }
    .list_elements .card .options_card .option:nth-child(2) button{
        appearance: inherit;
        width: 100%;
        height: 100%;
        border: none;
        background-color: green;
        color: white;
        text-align: center;
        font-weight: bold;
text-transform: uppercase;
        
    }
    
</style>
<div class="container">
    <div class="title_user">
        <h1>Hola de nuevo <span>{{user.name}}</span></h1>
    </div>
    <div class="nav_options">
        <a href="/profile/reported">Reportar una Mascota</a>
        <a href="/profile/lost">Registrar Mascota Perdida</a>
    </div>
    <h2 class="separator">Lista de Animales</h2>
    <hr>
    <div class="list_elements">
     {{#each pets}}
        <div class="card">
            <div class="status">
                <h3>{{status}}</h3>
            </div>
            <div class="image">
                <img src="{{url}}" alt="img">
            </div>
            <div class="description">
                <p>{{specie}}</p>
                <h2>{{name}}</h2>
                <h3>{{sex}}</h3>
            </div>
            <div class="options_card">
                <div class="option">
                    <button onclick="window.location.href='/profile/delete/{{idpet}}'">Delete</button>
                </div>
                <div class="option">
                    <button onclick="window.location.href='/profile/edit/{{idpet}}'">Edit</button>
                </div>
            </div>
        </div>
        
        {{/each}}
    </div>
</div>

